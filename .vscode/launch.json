{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/builddir/src/lens-magic",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            //"environment": [
            //    { "name": "GTK_DEBUG", "value": "interactive" }
            //],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "debug"
        },
        {
            "name": "Launch Debugger with valgrind",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/builddir/src/transcoder",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
              {
                "name": "PATH",
                "value": "$PATH:${command:cmake.launchTargetDirectory}"
              }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              },
              {
                  "description":  "Set Disassembly Flavor to Intel",
                  "text": "-gdb-set disassembly-flavor intel",
                  "ignoreFailures": true
              },
              {
                "description": "Connect to valgrind",
                "text": "${command:valgrind-task-integration.valgrindGdbArg}",
                "ignoreFailures": true
              }
            ]
          }
    ]
}